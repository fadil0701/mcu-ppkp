# MCU PPKP DKI Jakarta - Production Environment
# Copy this file to .env and update with your production values

APP_NAME="Sistem Monitoring MCU PPKP DKI Jakarta"
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_URL=http://10.15.101.117:7000
# Untuk domain dengan HTTPS, gunakan: APP_URL=https://your-domain.com
# Untuk IP access tanpa HTTPS: APP_URL=http://10.15.101.117:7000

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=monitoring_mcu_ppkp
DB_USERNAME=mcu_user
DB_PASSWORD=Ppkp-DKI1!!_Mcu

# Redis Configuration (Recommended for Production)
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Redis Connection Details
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=your_redis_password
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_SESSION_DB=2
REDIS_QUEUE_DB=3

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=your-smtp-host.com
MAIL_PORT=587
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-smtp-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="Sistem MCU PPKP"

# WhatsApp Configuration
WHATSAPP_PROVIDER=fonnte
WHATSAPP_TOKEN=your-whatsapp-token
WHATSAPP_INSTANCE_ID=your-instance-id

# File Storage
FILESYSTEM_DISK=local

# Session Configuration
# IMPORTANT: Set SESSION_SECURE_COOKIE=false untuk IP access tanpa HTTPS
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_SECURE_COOKIE=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SAME_SITE=lax
SESSION_HTTP_ONLY=true

# Security
BCRYPT_ROUNDS=12
HASH_VERIFY=true

# Performance Settings
DB_CONNECTION_TIMEOUT=30
DB_READ_TIMEOUT=30
DB_WRITE_TIMEOUT=30

# Monitoring
LOG_SLACK_WEBHOOK_URL=
LOG_DISCORD_WEBHOOK_URL=

# Backup Configuration
BACKUP_DISK=local
BACKUP_NOTIFICATION_MAIL=admin@your-domain.com
